<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TCPTesting.MainPage">


    <StackLayout Padding="30,0" Spacing="25">

        <Entry x:Name="IpEntry"  Placeholder ="IP:PORT">

        </Entry>

        <CheckBox x:Name="IsSocketOpen" IsEnabled="False" >
            
        </CheckBox>
        
        <Button x:Name="btnSocket" Text="Open Socket" Clicked="OpenSocket_Clicked">
        </Button>


        <Entry x:Name="MessageEntry" Text="" Placeholder ="Custom Message or select a file">

        </Entry>

        <Button Text="Select File" Clicked="Button_Clicked"></Button>



        <Button Text="Send Message" Clicked="SendMessage_Clicked">
        </Button>

        <Label x:Name="infoLabel" TextColor="White" Text="info"></Label>
        <Label x:Name="errorLabel" TextColor="Silver" Text="errors"></Label>

        <ProgressBar x:Name="progressBar" ProgressColor="Orange"></ProgressBar>

        <Entry x:Name="ListenerText" Placeholder ="Listener Data">

        </Entry>
        
    </StackLayout>
        
</ContentPage>
